{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environment_name": {
      "type": "string",
      "defaultValue": "eesdev",
      "metadata": {
        "description": "The name of the environment to deploy to"
      }
    }
  },
  "variables": {
    "containerAppName": "eesdev-frontend",
    "containerRegistryName": "eesdev"
  },
  "resources": [
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2022-03-01",
      "name": "eesdev-frontend",
      "location": "uksouth",
      "tags": {
        "Solution": "ees"
      },
      "properties": {
        "name": "[variables('containerAppName')]",
        "ingress": {
          "allowInsecure": false,
          "external": true,
          "targetPort": 3000,
          "traffic": [
            {
              "label": "test",
              "latestRevision": true,
              "revisionName": "latest",
              "weight": 100
            }
          ],
          "transport": "http"
        },
        "managedEnvironmentId": "[resourceId('Microsoft.App/managedEnvironments', parameters('environment_name'))]",
        "template": {
          "containers": [
            {
              "image": "[variables('containerRegistryName')].azurecr.io/[variables('containerAppName')]:latest",
              "name": "[variables('containerAppName')]",
              "probes": [
                {
                  "httpGet": {
                    "path": "/",
                    "port": 3000,
                    "scheme": "http"
                  },
                  "initialDelaySeconds": 10,
                  "successThreshold": 1,
                  "tcpSocket": {
                    "port": 3000
                  },
                  "type": "Readiness"
                }
              ],
              "resources": {
                "cpu": "[json('0.5')]",
                "memory": "250mb"
              }
            }
          ],
          "revisionSuffix": "latest",
          "scale": {
            "maxReplicas": 2,
            "minReplicas": 1
          }
        }
      }
    }
  ]
}