{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {},
  "variables": {
    "containerAppName": "eesdev-frontend",
    "containerRegistryName": "eesdev"
  },
  "resources": [
    {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2022-03-01",
      "name": "eesdev-frontend",
      "location": "uksouth",
      "tags": {
        "Solution": "ees"
      },
      "properties": {
        "name": "[variables('containerAppName')]",
        "ingress": {},
        "managedEnvironmentId": "[concat('/subscriptions/', subscription().subscriptionId, '/resourceGroups/', resourceGroup().name, '/providers/Microsoft.AppPlatform/managedEnvironments/', '[variables('containerRegistryName')]')]",
        "template": {
          "containers": [
            {
              "image": "[variables('containerRegistryName')].azurecr.io/[variables('containerAppName')]:latest",
              "name": "[variables('containerAppName')]",
              "probes": [
                {
                  "httpGet": {
                    "path": "/",
                    "port": 3000,
                    "scheme": "http"
                  },
                  "initialDelaySeconds": 10,
                  "successThreshold": 1,
                  "tcpSocket": {
                    "port": 3000
                  },
                  "type": "Readiness"
                }
              ],
              "resources": {
                "cpu": "[json('0.5')]",
                "memory": "250mb"
              }
            }
          ],
          "revisionSuffix": "latest",
          "scale": {
            "maxReplicas": 2,
            "minReplicas": 1
          }
        }
      }
    }
  ]
}
